{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "1.0.0",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "__MSG_popup_title__"
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "contextMenus",
    "webNavigation",
    "scripting",
    "bookmarks"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}